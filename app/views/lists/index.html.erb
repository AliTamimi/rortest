<h1>my Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>item</th>
      <th>done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    <% if list.completed %>
      <tr class="table-secondary">
        <td><%= link_to list.desc, edit_list_path(list) %><% list.desc  %></td>
        <td><%= list.completed %></td>
        <td><% link_to 'Show', list %></td>
        <td><% link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Remove', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% else %>
      <tr>
        <td><%= link_to list.desc, edit_list_path(list) %><% list.desc %></td>
        <td><%= list.completed %></td>
        <td><% link_to 'Show', list %></td>
        <td><% link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Remove', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>
